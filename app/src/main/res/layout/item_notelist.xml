<?xml version="1.0" encoding="utf-8"?>
<co.hatrus.andrew.paint.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RippleStyle"
    android:background="@drawable/selector_background_empty">
    <RelativeLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/type_icon"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <co.hatrus.andrew.paint.RobotoTextView
            android:layout_width="70dp"
            android:gravity="right"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:text="23 march 2015"
            style="@style/TextViewAppearance.Body2"
            android:id="@+id/date_listnote"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <co.hatrus.andrew.paint.RobotoTextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="Aszxas tatas mas zuzu gegetszxfas"
            style="@style/TextViewAppearance.Headline1"
            android:id="@+id/title_listnote"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/type_icon"
            android:layout_toLeftOf="@id/date_listnote"
            android:layout_toStartOf="@id/date_listnote"/>

        </RelativeLayout>

</co.hatrus.andrew.paint.MaterialRippleLayout>
