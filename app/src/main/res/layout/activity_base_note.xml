<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.hatrus.andrew.paint.BaseNoteActivity"
    android:background="@color/main_color_100"
    android:orientation="vertical">

    <EditText
        android:padding="@dimen/activity_horizontal_margin"
        android:maxLength="60"
        android:id="@+id/note_title"
        android:hint="tittle"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_200"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/reminder_textView"
        android:text="@string/set_reminder"
        android:drawableLeft="@drawable/perm_group_device_alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="co.hatrus.andrew.paint.MainFragmentActivity"
        android:layout_below="@+id/note_title"
        android:layout_above="@id/reminder_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonCancelAlarm"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/reminder_textView"
        android:layout_toEndOf="@+id/reminder_textView"/>

</RelativeLayout>
